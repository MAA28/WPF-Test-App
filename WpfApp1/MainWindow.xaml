<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Name="tbHello" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="75"
                   Text="Hello World">
        </TextBlock>
        <Button Name="btnRun" Width="100" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Margin="0,0,0,20" Content="Run" Click="BtnRun_OnClick" />
    </Grid>
</Window>